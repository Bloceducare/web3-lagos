{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["frontend/components/*"],
      "@views/*": ["views/*"],
      "@servers/*": ["servers/*"],
      "@config/*": ["config/*"],
      "@models/*": ["models/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "sendhackingEmail.ts"],
  "exclude": ["node_modules"]
}
